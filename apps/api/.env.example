# --- Server ---
PORT=3000
NODE_ENV=development

# MongoDB connection string (include credentials if required)
DATABASE_URL=mongodb://root:password@localhost:27017/ai-interview


# JWT signing secret for interviewer auth tokens
JWT_SECRET=dev-secret

# Frontend origins allowed by CORS (comma separated)
CLIENT_URL=http://localhost:5173

# Google Gemini configuration
GEMINI_API_KEY=replace-with-your-key
GEMINI_MODEL=gemini-1.5-flash

UPLOADS_DIR="./uploads"


# Optional SMTP settings (enable invite emails)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
MAIL_FROM=AI Interview <no-reply@example.com>
